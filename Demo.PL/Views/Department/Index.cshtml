@model IEnumerable<DepartmentViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>All Departments</h1>

<br />

<a asp-action="Create" class="btn btn-danger">Create New Department</a>

@if(Model?.Count() > 0)
{
    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(d =>d.Code)</th>
                <th>@Html.DisplayNameFor(d => d.Name)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Code</td>
                    <td>@item.Name</td>
                    <Partial name="_ButtonsViewPartial" model="@item.Id" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning mt-5">
        <h3>No Department Found</h3>
    </div>
}