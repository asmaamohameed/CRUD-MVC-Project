@model ApplicationUser

@{
    ViewData["Title"] = "Details";
}

<h1>User Details</h1>
<br />
<br />

<div class="row">

    <div class=" col-12">
        <div class="form-group">
            <label class="col-form-label" asp-for="@Model.Email"></label>
            <input asp-for="@Model.Email" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label class="col-form-label" asp-for="@Model.UserName"></label>
            <input asp-for="@Model.UserName" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label class="col-form-label" asp-for="@Model.PhoneNumber"></label>
            <input asp-for="@Model.PhoneNumber" class="form-control" readonly />
        </div>

        <br />

        <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-secondary">Edit</a> |
        <a asp-action="Index" class="btn btn-light">Back To List</a>

    </div>
</div>


