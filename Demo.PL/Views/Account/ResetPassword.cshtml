@model ResetPasswordViewModel


@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}


<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="ResetPassword" method="post">
			<div asp-validation-summary="All"></div>
			<input asp-for="Email" type="hidden" />
            <input asp-for="Token" type="hidden" />
            <input class="text" type="password" asp-for="Password" placeholder="New Password" required="">
            <input class="text" type="password" asp-for="ConfirmPassword" placeholder="Confirm Password" required="">
			<input type="submit" value="ResetPassword">
		</form>
	</div>
</div>

@section Scripts {
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}
