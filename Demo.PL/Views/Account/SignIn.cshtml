@model LoginViewModel


@{
	ViewData["Title"] = "Login";
	Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

@* <div asp-validation-summary="All"></div>
 *@
<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="SignIn" method="post">
			<input class="text w3lpass" asp-for="Email" placeholder="Email" required="">
			<span asp-validation-for="@Model.Email"></span>
			<input class="text w3lpass" asp-for="Password" type="password" placeholder="Password" required="">
			<span asp-validation-for="@Model.Password"></span>

			<div class="wthree-text">
				<label class="anim">
					<input asp-for="RememberMe" class="checkbox" >
					<span>RememberMe</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNIN">
			@* <a asp-action="GoogleLogin">Login With Google</a> *@
		</form>
		<p>Don't have an Account? <a asp-action="SignUp"> Register Now!</a></p>
		<p><a asp-action="ForgetPassword"> Forget Password!</a></p>
	</div>
</div>

@section Scripts {
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}


