@model EmployeeViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Employee Details</h1>

<div>

    @* <input hidden asp-for="@Model.ImageName" /> *@
    <div class="form-group">
        <label class="col-form-label" asp-for="@Model.Name"></label>
        <input asp-for="Name" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="@Model.Age"></label>
        <input asp-for="Age" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="@Model.Salary"></label>
        <input asp-for="Salary" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="@Model.Address"></label>
        <input asp-for="Address" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="@Model.Email"></label>
        <input asp-for="Email" class="form-control" readonly />
    </div>

    <div class="form-group form-check">
        <input asp-for="IsActive" class="form-check-input" type="checkbox" readonly />
        <label class="form-check-label" asp-for="@Model.IsActive"></label>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="@Model.PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" readonly />
    </div>

        <label class="col-form-label" asp-for="@Model.HireDate"></label>
        <input asp-for="HireDate" class="form-control" readonly />

    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">Edit</a> 
    <a asp-action="Index" class="btn btn-light">Back To List</a>
</div>


