@model EmployeeViewModel
@inject IDepartmentRepository deptRepo;


@{
    //var Departments = new SelectList(ViewBag.Departments, "Id", "Name");
     var Departments = new SelectList(deptRepo.GetAll().Result, "Id", "Name");
}
 
<div class="form-group">
    <label class="col-form-label" asp-for="@Model.Name"></label>
    <input asp-for="@Model.Name" class="form-control" />
    <span asp-validation-for="@Model.Name" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="@Model.Age"></label>
    <input asp-for="@Model.Age" class="form-control" />
    <span asp-validation-for="@Model.Age" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="@Model.Address"></label>
    <input asp-for="@Model.Address" class="form-control" />
    <span asp-validation-for="@Model.Address" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="@Model.Salary"></label>
    <input asp-for="@Model.Salary" class="form-control" />
    <span asp-validation-for="@Model.Salary" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="@Model.Email"></label>
    <input asp-for="@Model.Email" class="form-control" />
    <span asp-validation-for="@Model.Email" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="@Model.PhoneNumber"></label>
    <input asp-for="@Model.PhoneNumber" class="form-control" />
    <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="@Model.DepartmentId"></label>
    <select class="form-control" asp-for="@Model.DepartmentId" asp-items="Departments">
        <option value="@null">-- Select Department --</option>
    </select>
    <span asp-validation-for="@Model.DepartmentId" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="@Model.HireDate"></label>
    <input asp-for="@Model.HireDate" class="form-control" />
    <span asp-validation-for="@Model.HireDate" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="@Model.Image"></label>
    <input type="file" asp-for="@Model.Image" class="form-control"/>
</div>

<div class="form-group form-check">
    <input asp-for="@Model.IsActive" class="form-check-input" type="checkbox" />
    <label class="form-check-label" asp-for="@Model.IsActive"></label>
</div>